{% extends '::base.html.twig' %}
{% block dashboard %}
{% endblock %}

{% block content %}

    <div id="content" class="span10">

        <div class="row-fluid">
            <br>
            <h1>Employment Details</h1>

    <hr><div class="pull-right">
                <a><button class="btn-new btn btn-round btn-primary"><i class="icon-plus"></i> Add Qualification </button></a>
                <a><button class="btn-continue btn btn-round btn-success"><i class="icon-arrow-right"></i> Continue  </button></a>
            </div>
            <br><br>


    <div class="box-content">


    <table class="table table-striped table-bordered bootstrap-datatable " width="100%">
        <thead >
        <tr>
            <th width="40%">Organization</th>
            <th width="30%">Type</th>
            <th width="30%">Occupation</th>
      
        </tr>
        </thead>
        <tbody>
        {% for entity in history %}
            <tr>
                <td width="40%">{{ entity.organization }}</td>
                <td width="30%">{{ entity.organizationtype }}</td>
                <td width="30%">{{ entity.occupation }}</td>
                
            </tr>
        {% endfor %}

        </tbody>
    </table>
        </div>

    </div>

</div>
    </div>

    <div class="modal hide fade" id="new">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">×</button>
            <h3>Add Employment</h3>
        </div>
        <div class="modal-body">
            <p >Please fill the following details
            </p>

            {{ form_start(form) }}

            <div class="control-group primary">
                {{form_label(form.organization, 'Organization Name',{ 'label_attr': {'class': 'control-label'} })}}

                <div class="controls">
                    {{form_widget(form.organization)}}
                    <span class="help-inline">{{ form_errors(form.organization) }}</span>
                </div>
            </div>
            <div class="control-group primary">
                {{form_label(form.organizationtype, 'Type',{ 'label_attr': {'class': 'control-label'} })}}

                <div class="controls">
                    {{form_widget(form.organizationtype)}}
                    <span class="help-inline">{{ form_errors(form.organizationtype) }}</span>
                </div>
            </div>
            <div class="control-group primary">
                {{form_label(form.occupation, 'occupation',{ 'label_attr': {'class': 'control-label'} })}}

                <div class="controls">
                    {{form_widget(form.occupation)}}
                    <span class="help-inline">{{ form_errors(form.occupation) }}</span>
                </div>
            </div>
         





        </div>
        <div class="modal-footer">
                <input name="id" id="del-id" type="hidden" value="empty" />
                <a href="#" class="btn" data-dismiss="modal">Close</a>
                <input type="submit" class="btn btn-primary" value="continue">
            {{ form_end(form) }}

        </div>
    </div>

    <div class="modal hide fade" id="continue">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">×</button>
            <h3>Are you sure?</h3>
        </div>
        <div class="modal-body">
            {% if history == null %}
            <p align="center">You have not added any information regarding your employment history
            </p>

            {% else %}
                <p align="center">Have you completed your employment details?
                </p>
            {% endif %}

        </div>
        <div class="modal-footer">
            <input name="id" id="del-id" type="hidden" value="empty" />
            <a href="#" class="btn" data-dismiss="modal">Close</a>
            {% if history != null %}
            <a href="{{ path('ridwan_user_volunteer_skills') }}"> <input class="btn btn-primary" value="continue"></a>
	    {% endif %}
        </div>
    </div>
{% endblock %}
